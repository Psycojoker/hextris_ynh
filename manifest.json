{
    "name": "Hextris",
    "id": "hextris",
    "description": {
        "en": "A fast paced puzzle game.",
        "fr": "Un jeu de puzzle tr√®s rapide"
    },
    "licence": "GNU GPL-3",
    "developer": {
        "name": "opi",
        "email": "opi@no-log.org",
        "url": "http://zeropi.net"
    },
    "multi_instance": "false",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "ask": {
                    "en": "Choose a domain for Hextris",
                    "fr": "Choisissez un domaine pour Hextris"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "ask": {
                    "en": "Choose a path for Hextris",
                    "fr": "Choisissez un chemin pour Hextris"
                },
                "example": "/hextris",
                "default": "/hextris"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}
